
<mujoco model="Tbar">

    <include file="scene.xml"/>

    <option timestep="0.002" iterations="100" solver="PGS" jacobian="dense" gravity = "0 0 -9.8" viscosity="0"/>

    <size njmax="5000" nconmax="500" nstack="5000000"/>

    <asset>
        <material name="rod" rgba=".7 .5 .3 1"/>
    </asset>
    
    <default>
        <motor ctrllimited="false" ctrlrange="-100 100"/>
        <tendon stiffness="100" damping="1" range=".5 2" springlength=".5" frictionloss=".2"/>
        <geom size="0.02" mass=".1"/>
        <site size="0.04"/>
        <camera pos="0 -10 0"/>
    </default>
        
    <worldbody>
        
        <body>  
            <geom name="bar1" type="capsule" fromto="-1 0 0 1 0 0" material="rod"/>
            <site name="b0" pos="-1 0 0"/>
            <site name="b1" pos="1 0 0"/>
            <joint name="r1" type="free" pos="0 0 0" limited="false" damping="0" armature="0" stiffness="0.2"/> 
        </body>

        <body>  
            <geom name="bar2" type="capsule" fromto="0 -1 0 0 1 0" material="rod"/>
            <site name="b2" pos="0 -1 0"/>
            <site name="b3" pos="0 1 0"/>
            <joint name="r2" type="free" pos="0 0 0" limited="false" damping="0" armature="0" stiffness="0.2"/> 
        </body>

    </worldbody>
        
    <tendon>
        
        <spatial name="S0" width="0.02">
            <site site="b0"/>
            <site site="b2"/>
        </spatial>

        <spatial name="S1" width="0.02">
            <site site="b0"/>
            <site site="b3"/>
        </spatial>

        <spatial name="S2" width="0.02">
            <site site="b1"/>
            <site site="b2"/>
        </spatial>

        <spatial name="S3" width="0.02">
            <site site="b1"/>
            <site site="b3"/>
        </spatial>

    </tendon>
        
    <actuator>
        
        <motor tendon="S0" gear="1"/>

        <motor tendon="S2" gear="1"/>

    </actuator>
        
</mujoco>
        